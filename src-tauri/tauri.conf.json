{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "iFocus",
  "version": "0.1.3",
  "identifier": "com.ifocus.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "iFocus",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
